<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.helpfooter.steve.petcure.AddressSearchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/activity_little_vertical_margin"
        android:paddingTop="@dimen/activity_little_vertical_margin"
        android:paddingLeft="@dimen/activity_little_vertical_margin"
        android:paddingRight="@dimen/activity_little_vertical_margin"
        android:background="@color/LightGray"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:background="@color/white"
            android:hint="搜索附近位置"
            android:textSize="14dp"
            android:gravity="center"
            android:padding="5dp"
            android:id="@+id/txtKeyword"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ScrollView
        android:id="@+id/listResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ScrollView>
</LinearLayout>
